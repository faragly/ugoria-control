@import 'nib'

#vehiclesControl
  .green
    color #5cb85c
  
.wrap
  position relative
.dropdown
  position: absolute
  top: 0
  left: 0
  z-index: 1060
  display: none
  //max-width: 400px
  padding: 1px
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 14px
  font-style: normal
  font-weight: normal
  line-height: 1.42857143
  text-align: left
  text-align: start
  text-decoration: none
  text-shadow: none
  text-transform: none
  letter-spacing: normal
  word-break: normal
  word-spacing: normal
  word-wrap: normal
  white-space: normal
  background-color: #fff
  background-clip: padding-box
  border: 1px solid #ccc
  border: 1px solid rgba(0, 0, 0, .2)
  border-radius: 6px
  box-shadow: 0 5px 10px rgba(0, 0, 0, .2)
  line-break: auto
  width 580px
  &.show
    display block
  &.bottom
    margin-top 2px
  .inner
    height: 200px;
    overflow-x: auto;
    &:focus
      outline: none
    .dropdown-content
      //padding 9px 14px
      overflow hidden
      .flex-container
        display: flex
        flex-flow: row wrap
        > nav, > aside
          flex: 1 auto
        > nav
          //width 22%
          //flex: 12 3 22%
          //flex-grow 3
          flex-basis 22%
          background-color #f5f5f5
          border-right 1px solid #ddd
        > aside
          //width 78%
          flex-basis 78%
          //background: lightgreen
          padding 5px 15px
        .item
          flex-basis 25%
          min-width 85px
          a 
            border-bottom 1px dotted #555
            text-decoration none
            &:hover
              text-decoration none
            &:focus
              background-color #4f9fcf
              border-radius 3px
              border-bottom none
              color #fff
              padding 0 5px

.tabs-left
  .show-all
    position absolute
    bottom 1px
    left 1px
  > .nav-tabs
    border-bottom 0
    //float left
    > li
      float none
      > a 
        margin-right 0
        margin-bottom 3px
        padding 5px 15px
        margin-right -1px
        border-radius 0// 4px 0 0 4px
        &:hover, &:focus
          border-color #eeeeee #dddddd #eeeeee #eeeeee
    .active
      &:first-child
        > a, > a:hover, > a:focus
          border-top-color transparent
      > a, > a:hover, > a:focus
        border-color #eeeeee #dddddd #eeeeee #eeeeee
        border-color #ddd transparent #ddd transparent
        *border-right-color: #ffffff

/* Remove these to get rid of the spinner */
.spinner
  display: block
  position: absolute
  z-index: 1031
  top: 50%
  left: 50%
  margin-left: -9px
  margin-top: -9px
  .spinner-icon
    width: 18px
    height: 18px
    box-sizing: border-box
    border: solid 2px transparent
    border-top-color: #29d
    border-left-color: #29d
    border-radius: 50%
    animation: nprogress-spinner 400ms linear infinite
@keyframes nprogress-spinner
    0%
      transform rotate(0deg)
    100% 
      transform rotate(360deg)