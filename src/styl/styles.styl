@import 'nib'

.container
  padding-right 15px
  padding-left 15px
  margin-right auto
  margin-left auto
  padding-top 40px
  @media (min-width: 768px)
    width 750px
  @media (min-width: 992px)
    width 970px
  @media (min-width: 1200px)
    width 1170px

.browsehappy 
  text-align center
  padding 10px 0
  background-color: #ce2125;
  color #fff
  font-size 1em
  width 100%
  a
    text-decoration underline
    color rgba(255,255,255, 0.8)
    &:hover
      text-decoration inherit

.wrap
  position relative
.dropdown
  position absolute
  top 0
  left 0
  z-index 1060
  display none
  padding 1px
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size 14px
  font-style normal
  font-weight normal
  line-height 1.42857143
  text-align left
  text-align start
  text-decoration none
  text-shadow none
  text-transform none
  letter-spacing normal
  word-break normal
  word-spacing normal
  word-wrap normal
  white-space normal
  background-color #fff
  background-clip padding-box
  border 1px solid #ccc
  border 1px solid rgba(0, 0, 0, .2)
  border-radius 6px
  box-shadow 0 5px 10px rgba(0, 0, 0, .2)
  line-break auto
  width 580px
  margin-top 2px
  &--show
    display block
  &__inner
    height 200px
    overflow-x auto
    &:focus
      outline: none
    &-content
      overflow hidden
      .flex-container
        display: flex
        flex-flow: row wrap
        > nav, > .content
          flex: 1 auto
        > nav
          flex-basis 22%
          background-color #f5f5f5
          border-right 1px solid #ddd
          > ul.menu
            border-bottom 0
            padding 0
            > li.menu__item
              float none
              margin-bottom -1px
              display block
              > a 
                margin-right 0
                margin-bottom 3px
                padding 5px 15px
                margin-right -1px
                border-radius 0
                text-align left
                border 1px solid transparent
                display block
                &:hover, &:focus
                  text-decoration none
                  background-color #eee
                  border-color #eeeeee #dddddd #eeeeee #eeeeee
              &--active
                a
                  cursor default
                  background-color #fff
                  border 1px solid #ddd
                &:first-child
                  > a, > a:hover, > a:focus
                    border-top-color transparent
                > a, > a:hover, > a:focus
                  background-color #fff
                  border-color #ddd transparent #ddd transparent
        > .content
          flex-basis 78%
          padding 5px 15px
          .item
            flex-basis 25%
            min-width 85px
            a 
              border-bottom 1px dotted #555
              text-decoration none
              &:hover
                text-decoration none
              &:focus
                background-color #4f9fcf
                border-radius 3px
                border-bottom none
                color #fff
                padding 0 5px

/* Remove these to get rid of the spinner */
.spinner
  display: block
  position: absolute
  z-index: 1031
  top: 50%
  left: 50%
  margin-left: -9px
  margin-top: -9px
  &__icon
    width: 18px
    height: 18px
    box-sizing: border-box
    border: solid 2px transparent
    border-top-color: #29d
    border-left-color: #29d
    border-radius: 50%
    animation: nprogress-spinner 400ms linear infinite
@keyframes nprogress-spinner
    0%
      transform rotate(0deg)
    100% 
      transform rotate(360deg)